<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_margin="8dp"
    tools:layout_editor_absoluteX="4dp"
    tools:layout_editor_absoluteY="4dp">


    <ImageView
        android:id="@+id/notice_row_reply_entry_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/empty_avatar"
        app:layout_constraintStart_toEndOf="@+id/notice_row_reply_indent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/notice_row_reply_entry_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="LOREM IMPSUM"
        app:layout_constraintStart_toEndOf="@+id/notice_row_reply_entry_image"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/notice_row_unread_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="?attr/unread_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/notice_row_reply_indent"
        android:layout_width="8dp"
        android:layout_height="0dp"
        android:background="#ff0000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>