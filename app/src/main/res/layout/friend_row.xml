<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/friend_row_thumbnail_wrap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="1dp"
        android:orientation="vertical"
        android:padding="3dp" >

        <ImageView
            android:id="@+id/friend_row_thumbnail"
            android:layout_width="50dp"
            android:layout_height="50dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/friend_row_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/friend_row_thumbnail_wrap"
        android:layout_toRightOf="@+id/friend_row_thumbnail_wrap"
        android:text="VIRTUALVOID" />

    <TextView
        android:id="@+id/friend_row_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/friend_row_nick"
        android:layout_marginRight="5dp"
        android:gravity="right"
        android:text="time diff"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/friend_row_location"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/friend_row_nick"
        android:layout_toRightOf="@+id/friend_row_thumbnail_wrap"
        android:text="location" />

</RelativeLayout>